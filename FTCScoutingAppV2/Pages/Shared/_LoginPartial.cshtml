@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new {area = ""})" method="post" id="logoutForm">
        <a href="javascript:{}" class="hidden-mobile" style="float: right;" onclick="document.getElementById('logoutForm').submit();">Logout</a>
        <a asp-area="Identity" class="hidden-mobile" style="float: right;" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
    </form>
}
else
{
    <a asp-area="Identity" class="hidden-mobile" style="float: right;" asp-page="/Account/Register">Register</a>
    <a asp-area="Identity" style="float: right;" asp-page="/Account/Login">Login</a>
}