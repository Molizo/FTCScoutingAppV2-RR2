@page
@model FTCScoutingAppV2.Pages.Matches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Match.ID" />
            <input type="hidden" asp-for="Match.teamID" />
            <h3>Match information</h3>
            <div class="form-group">
                <label asp-for="Match.matchType" class="control-label"></label>
                <select asp-for="Match.matchType" asp-items="Html.GetEnumSelectList<Models.MatchTypes>()">
                    <option selected="selected" value="">Please select match type</option>
                </select>
                <span asp-validation-for="Match.matchType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.matchNumber" class="control-label"></label>
                <input asp-for="Match.matchNumber" class="form-control" />
                <span asp-validation-for="Match.matchNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.alliance" class="control-label"></label>
                <select asp-for="Match.alliance" asp-items="Html.GetEnumSelectList<Models.Alliances>()">
                    <option selected="selected" value="">Please select alliance</option>
                </select>
                <span asp-validation-for="Match.alliance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.startLocation" class="control-label"></label>
                <select asp-for="Match.startLocation" asp-items="Html.GetEnumSelectList<Models.MatchStartLocations>()">
                    <option selected="selected" value="">Please select start location</option>
                </select>
                <span asp-validation-for="Match.startLocation" class="text-danger"></span>
            </div>
            <h3>Autonomy period</h3>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Match.landing" /> @Html.DisplayNameFor(model => model.Match.landing)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Match.sampling" /> @Html.DisplayNameFor(model => model.Match.sampling)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Match.doubleSampling" /> @Html.DisplayNameFor(model => model.Match.doubleSampling)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Match.teamMarker" /> @Html.DisplayNameFor(model => model.Match.teamMarker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Match.parking" /> @Html.DisplayNameFor(model => model.Match.parking)
                    </label>
                </div>
            </div>
            <h3>Driver controlled period</h3>
            <div class="form-group">
                <label asp-for="Match.goldMinerals" class="control-label"></label>
                <input asp-for="Match.goldMinerals" class="form-control" />
                <span asp-validation-for="Match.goldMinerals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.silverMinerals" class="control-label"></label>
                <input asp-for="Match.silverMinerals" class="form-control" />
                <span asp-validation-for="Match.silverMinerals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.depotMinerals" class="control-label"></label>
                <input asp-for="Match.depotMinerals" class="form-control" />
                <span asp-validation-for="Match.depotMinerals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.cycles" class="control-label"></label>
                <input asp-for="Match.cycles" class="form-control" />
                <span asp-validation-for="Match.cycles" class="text-danger"></span>
            </div>
            <h4>End game</h4>
            <div class="form-group">
                <label asp-for="Match.endLocation" class="control-label"></label>
                <select asp-for="Match.endLocation" asp-items="Html.GetEnumSelectList<Models.EndLocations>()">
                    <option selected="selected" value="">Please select end location</option>
                </select>
                <span asp-validation-for="Match.endLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Back to match list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}